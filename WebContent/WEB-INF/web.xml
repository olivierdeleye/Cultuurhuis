<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>Het CultuurHuis</display-name>
  <welcome-file-list>
    <welcome-file>start.htm</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/JSP/404.jsp</location>
  </error-page>
  <error-page>
    <exception-type>be.vdab.dao.DAOException</exception-type>
    <location>/WEB-INF/JSP/daoexception.jsp</location>
  </error-page>
   <filter>
    <filter-name>ServletFilter</filter-name>
    <filter-class>be.vdab.filters.ServletFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>ServletFilter</filter-name>
    <url-pattern>*.htm</url-pattern>
  </filter-mapping>
  <servlet>
   <servlet-name>StartServlet</servlet-name>
   <servlet-class>be.vdab.servlets.StartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
   <servlet-name>StartServlet</servlet-name>
   <url-pattern>/start.htm</url-pattern>
  </servlet-mapping>
  <servlet>
   <servlet-name>VoorstellingServlet</servlet-name>
   <servlet-class>be.vdab.servlets.VoorstellingServlet</servlet-class>
  </servlet>
  <servlet-mapping>
   <servlet-name>VoorstellingServlet</servlet-name>
   <url-pattern>/voorstelling.htm</url-pattern>
  </servlet-mapping>
   <servlet>
   <servlet-name>ZoekKlantServlet</servlet-name>
   <servlet-class>be.vdab.servlets.ZoekKlantServlet</servlet-class>
  </servlet>
  <servlet-mapping>
   <servlet-name>ZoekKlantServlet</servlet-name>
   <url-pattern>/zoekKlant.htm</url-pattern>
  </servlet-mapping>
   <servlet>
   <servlet-name>ReservatieServlet</servlet-name>
   <servlet-class>be.vdab.servlets.ReservatieServlet</servlet-class>
  </servlet>
  <servlet-mapping>
   <servlet-name>ReservatieServlet</servlet-name>
   <url-pattern>/reserveren.htm</url-pattern>
  </servlet-mapping>
   <servlet>
   <servlet-name>NieuweKlantServlet</servlet-name>
   <servlet-class>be.vdab.servlets.NieuweKlantServlet</servlet-class>
  </servlet>
  <servlet-mapping>
   <servlet-name>NieuweKlantServlet</servlet-name>
   <url-pattern>/nieuweklant.htm</url-pattern>
  </servlet-mapping>
   <servlet>
   <servlet-name>MandjeServlet</servlet-name>
   <servlet-class>be.vdab.servlets.MandjeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
   <servlet-name>MandjeServlet</servlet-name>
   <url-pattern>/mandje.htm</url-pattern>
  </servlet-mapping>
   <servlet>
   <servlet-name>BoekingServlet</servlet-name>
   <servlet-class>be.vdab.servlets.BoekingServlet</servlet-class>
  </servlet>
  <servlet-mapping>
   <servlet-name>BoekingServlet</servlet-name>
   <url-pattern>/boeking.htm</url-pattern>
  </servlet-mapping>
   <servlet>
   <servlet-name>BevestigingServlet</servlet-name>
   <servlet-class>be.vdab.servlets.BevestigingServlet</servlet-class>
  </servlet>
  <servlet-mapping>
   <servlet-name>BevestigingServlet</servlet-name>
   <url-pattern>/bevestiging.htm</url-pattern>
  </servlet-mapping>
  
  </web-app>